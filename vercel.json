{
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.alventis.be"
        }
      ],
      "destination": "https://alventis.be/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://alventis.be/$1",
      "permanent": true
    },
    {
      "source": "/(.+)/",
      "destination": "/$1",
      "permanent": true
    },
    {
      "source": "/index",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/index/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/(.+)\\.html",
      "destination": "/$1",
      "permanent": true
    },
    {
      "source": "/old-privacy",
      "destination": "/privacy",
      "permanent": true
    },
    {
      "source": "/legal",
      "destination": "/impressum",
      "permanent": true
    },
    {
      "source": "/legal-notice",
      "destination": "/impressum",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/((assets|images|fonts|static)/.*|favicon-optimized\\.webp|.*\\.(js|css|webp|woff2|png|jpg|svg))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.html|/)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}